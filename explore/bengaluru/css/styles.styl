*
    padding 0
    margin 0
    font-family "Rubik", "Circular", "Graphik", "Segoe UI", sans-serif
    background black
    color white
    box-sizing border-box !important

h1
    font-size 2.5rem
    font-weight 500
h2
    font-size 2rem
    font-weight 500
h3
    font-size 1.5rem
    font-weight 400
h4
    font-size 1rem
    font-weight 300

a
    background-image linear-gradient(120deg, white 0%, white 100%)
    background-repeat no-repeat
    background-size 100% 0.2em
    background-position 0 88%
    transition background-size 300ms ease-in-out
    color #ff1d5d
    text-decoration none
    &:hover
        background-size 100% 88%

header
    position fixed
    z-index 9999
    width 100%
    padding 1rem 2rem
    display flex
    .right
        flex 1
    .left
        flex 1
        ul
            list-style-type none
            display flex
            flex-flow row nowrap
            justify-content flex-end
            li
                padding-right 10px
                &:last-child
                    padding 0
                a
                    background-image none
                    &:hover
                        text-decoration underline
    
footer
    z-index 9999
    width 100%
    padding 1rem 2rem
    display flex
    .right
        flex 1
        a
            background-image none
            &:hover
                text-decoration underline

.hero
    height 100vh
    width 100%
    min-height 500px
    display flex
    align-content center
    justify-content center
    flex-flow column wrap
    max-width 960px
    margin 0 auto
    padding 0 2rem
    position relative
    z-index 2
    background transparent
    color black
    h1, h3
        background transparent
        color black

iframe
    z-index 1
    position absolute
    top 0
    left 0
    width 100%
    height 100vh
    
.attractions
    max-width 960px
    margin 5rem auto
    padding 0 2rem
    h4
        margin 2rem 0 0
        color #999999
    .grid
        display grid
        grid-template-columns 50% 50%
        .attraction
            padding 40px
            cursor pointer
            h1
                transition 300ms ease-in-out color
            h5
                font-size 1.1rem
                font-weight 300
            &:nth-child(1), &:nth-child(6)
                h5
                    color #ffcc00
            &:nth-child(2), &:nth-child(7)
                h5
                    color #00ccff
            &:nth-child(3), &:nth-child(8)
                h5
                    color #9966cc
            &:nth-child(4), &:nth-child(9)
                h5
                    color #99cc00
            &:nth-child(5), &:nth-child(10)
                h5
                    color #e7711b
            &:hover
                h1
                    color #ff1d5d
    
.history
    max-width 960px
    margin 5rem auto
    padding 0 2rem
    h4
        margin 2rem 0
        color #999999
    .block
        display flex
        padding 0 0 2rem 2rem
        .year
            flex 1
            padding-top .3rem
        .event
            flex 3

.upvote
    background #ff1d5d
    height 80vh
    min-height 500px
    display flex
    justify-content center
    align-items center
    flex-flow column wrap
    h1, h3
        background none
        a
            background-image none
            background none
            color #ababab
            &:hover
                text-decoration underline

@media screen and (max-width 550px)
    header
        display none
    
    iframe
        display none
    
    .hero
        h1, h3
           color white !important

    .attractions
        .grid
            display block
    
    .history
        .block
            display block